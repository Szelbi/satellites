{% extends 'base.html.twig' %}

{% block title %}{{ 'main.main_page_title'|trans }}{% endblock %}

{% block body %}
    <div class="container homepage width-md">

        <div class="page-header">
            <h1>{{ 'main.main_page_title'|trans }}</h1>
        </div>

        <div class="endpoints-container">
            <div class="endpoints-container-list">
                {% for key, value in routes %}
                    <a href="{{ path(key) }}" class="button">{{ value }}</a>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}
