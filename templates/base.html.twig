<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Szelbi's Workspace{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap-icons/font/bootstrap-icons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
    {% endblock %}
</head>

<body>
    {% include('header.html.twig') %}

    <div class="main-layout">
        <aside class="sidebar">
            {% block sidebar %}
                <nav class="sidebar-nav">
                    <a href="{{ path('contact_form_index') }}" class="sidebar-link">
                        <i class="bi bi-envelope"></i>
                        <span>{{ 'menu.contact_form'|trans }}</span>
                    </a>
                    <a href="{{ path('todo_index') }}" class="sidebar-link">
                        <i class="bi bi-list-check"></i>
                        <span>{{ 'menu.todo'|trans }}</span>
                    </a>
                    <a href="{{ path('weather_index') }}" class="sidebar-link">
                        <i class="bi bi-cloud-sun"></i>
                        <span>{{ 'menu.weather'|trans }}</span>
                    </a>
                    <a href="{{ path('lucky_number_index') }}" class="sidebar-link">
                        <i class="bi bi-dice-6"></i>
                        <span>{{ 'menu.lucky_number'|trans }}</span>
                    </a>
                    <a href="{{ path('projects_index') }}" class="sidebar-link">
                        <i class="bi bi-folder"></i>
                        <span>{{ 'menu.projects'|trans }}</span>
                    </a>
                </nav>
            {% endblock %}
        </aside>
        
        <main class="main-content">
            <div class="container body-container">
                {% block body %}{% endblock %}
            </div>
        </main>
    </div>

    {% block footer %}
    {% endblock %}

    {% include('footer.html.twig') %}

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
            <script type="module">
                import 'bootstrap';
            </script>
        {% endblock %}
    {% endblock %}

</body>
</html>
