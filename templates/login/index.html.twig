{% extends 'base.html.twig' %}

{% block title %}{{ 'main.login'|trans }}{% endblock %}

{% block body %}

    <div class="container width-sm">
        <div class="page-header">
            <h2>{{ 'main.login'|trans }}</h2>
        </div>

        <div class="login-form">
            <form action="{{ path('app_login') }}" method="post">
                <div class="login-username">
                    <label for="username">{{ 'main.email'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}">
                </div>
                <div class="login-password">
                    <label for="password">{{ 'main.password'|trans }}</label>
                    <input type="password" id="password" name="_password">
                </div>
                {% if error %}
                    <div class="form-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}

                <button type="submit">{{ 'main.login_btn'|trans }}</button>
            </form>
            
            <div class="register-link mt-3">
                <p>{{ 'main.no_account'|trans }} <a href="{{ path('app_register') }}">{{ 'main.register'|trans }}</a></p>
            </div>
        </div>
    </div>
{% endblock %}
