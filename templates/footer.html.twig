{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/footer.scss') }}">
{% endblock %}

{% block footer %}
    <footer class="footer">
        <div class="waves">
            {% set wave = asset('images/wave.png') %}
            <div class="wave" id="wave1" style="background-image: url({{ wave }})"></div>
            <div class="wave" id="wave2" style="background-image: url({{ wave }})"></div>
            <div class="wave" id="wave3" style="background-image: url({{ wave }})"></div>
            <div class="wave" id="wave4" style="background-image: url({{ wave }})"></div>
        </div>
        <ul class="menu">
            <li class="menu-item"><a class="menu-link" href="{{ path('home_page') }}">{{ 'footer.home'|trans }}</a></li>
            <li class="menu-item"><a class="menu-link" href="#">{{ 'footer.about'|trans }}</a></li>
            <li class="menu-item"><a class="menu-link" href="#">{{ 'footer.services'|trans }}</a></li>
            <li class="menu-item"><a class="menu-link" href="{{ path('contact_form_index') }}">{{ 'footer.contact'|trans }}</a></li>

        </ul>
        <div class="bottom-section">
            <div></div>
            <p class="align-center">&copy;2025 Dawid Gos | {{ 'footer.all_rights_reserved'|trans }}</p>
            <p class="align-right">{{ 'footer.rendered_at'|trans }}: {{ 'now'|date('H:i:s') }}</p>
        </div>
    </footer>
{% endblock %}
